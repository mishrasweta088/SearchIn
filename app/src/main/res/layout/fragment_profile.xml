<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightblue"
    tools:context=".fragment.ProfileFragment"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="@string/myProfile"
            android:layout_marginLeft="145dp"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:layout_marginStart="145dp" />

        <ImageView
            android:id="@+id/avatarTV"
            android:layout_width="125dp"
            android:layout_height="120dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="100dp"

            android:contentDescription="@string/todo"
            android:padding="5dp"
            android:src="@drawable/img_165522"
            android:layout_marginStart="130dp" />


        <TextView
            android:id="@+id/nameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="230dp"
            android:hint="@string/firstName"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginStart="80dp" />

        <TextView
            android:id="@+id/lastname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="190dp"
            android:layout_marginTop="230dp"
            android:hint="@string/lastname"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginStart="190dp" />



        <TextView
            android:id="@+id/emailTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="260dp"
            android:layout_marginLeft="80dp"
            android:hint="@string/email"
            android:textColor="@color/black"
            android:layout_marginStart="80dp" />





        <TextView
            android:id="@+id/stateview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="290dp"
            android:text="@string/stateview"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginStart="80dp" />

        <TextView
            android:id="@+id/state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="290dp"
            android:hint="@string/state"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginStart="125dp" />


        <TextView
            android:id="@+id/desigview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="320dp"
            android:text="@string/desig"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginStart="80dp" />
        <TextView
            android:id="@+id/designation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="320dp"
            android:hint="@string/designation"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginStart="170dp" />


        <TextView
            android:id="@+id/skillsview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="350dp"
            android:text="@string/skillsview"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginStart="80dp" />


        <TextView
            android:id="@+id/skills"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="350dp"
            android:hint="@string/skills"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginStart="125dp" />


        <TextView
            android:id="@+id/educationview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="380dp"
            android:text="@string/educationview"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginStart="80dp" />
        <TextView
            android:id="@+id/education"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="155dp"
            android:layout_marginTop="380dp"
            android:hint="@string/education"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginStart="155dp" />


        <TextView
            android:id="@+id/additional"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="500dp"
            android:text="@string/additional"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:background="@drawable/btn_login"
            android:textStyle="bold"
            android:layout_marginStart="220dp" />



    </RelativeLayout>

</ScrollView>
