<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterOption"
    android:background="@color/lightblue"
    android:padding="20dp">

    <TextView
        android:id="@+id/registerOption"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="100dp"
        android:text="@string/register_option"
        android:textColor="@color/black"

        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/registerUser_btn"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/registerOrganisation_btn"
        android:layout_marginBottom="-1dp"
        android:text="@string/register_for_user" />

    <Button
        android:id="@+id/registerOrganisation_btn"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="251dp"
        android:text="@string/register_for_organisation" />

    <TextView
        android:id="@+id/have_accountTV"
        android:layout_width="365dp"
        android:layout_height="40dp"
        android:layout_marginTop="470dp"
        android:layout_marginBottom="230dp"
        android:textSize="15sp"
        android:gravity="center_horizontal"
        android:text="@string/already_have_account_login"
        android:textAlignment="center"
        android:textColor="#000007" />


</RelativeLayout>